@model WaxWorx.UI.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid bg-dark text-light py-4">
    <div class="d-flex align-items-center mb-4">
        <div class="summary-icon text-accent-blue me-3">
            <i class="bi bi-person-fill fs-1"></i>
        </div>
        <h2 class="text-info mb-0">Login</h2>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <div>
            <span class="fw-bold">Enter your credentials</span>
        </div>
        <div>
            <a class="btn btn-custom-view mb-3" asp-action="Index" asp-controller="Home">← Back</a>
        </div>
    </div>

    <form asp-action="Login" method="post" class="needs-validation d-flex justify-content-center" novalidate>
        <div class="w-100" style="max-width: 320px;">
            <div class="mb-3 text-center">
                <label asp-for="Username" class="form-label text-light"></label>
                <input asp-for="Username" class="form-control bg-secondary text-light text-center" />
                <span asp-validation-for="Username" class="text-danger d-block"></span>
            </div>

            <div class="mb-3 text-center">
                <label asp-for="Password" class="form-label text-light"></label>
                <input asp-for="Password" class="form-control bg-secondary text-light text-center" type="password" />
                <span asp-validation-for="Password" class="text-danger d-block"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-info px-4">Login</button>
            </div>
        </div>
    </form>
</div>