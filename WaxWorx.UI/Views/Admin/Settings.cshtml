@model WaxWorx.UI.ViewModels.SettingsViewModel

@{
    ViewData["Title"] = "Settings";
}

@if (TempData["AlertMessage"] != null)
{
    <script>
        alert('@TempData["AlertMessage"]');
    </script>
}


<div class="container-fluid bg-dark text-light py-4">
    <div class="d-flex align-items-center mb-4">
        <div class="summary-icon text-accent-blue me-3">
            <i class="bi bi-person-fill fs-1"></i>
        </div>
        <h2 class="text-info mb-0">Settings</h2>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <div>
            Settings
        </div>
        <div>
            <a class="btn btn-custom-view mb-3" asp-action="Admin" asp-controller="Home">← Back</a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-auto">
            <label class="form-label text-light fw-bold">CSV Import</label>
        </div>
        <div class="col">
            <form asp-controller="Admin" asp-action="RunImport" method="post" enctype="multipart/form-data" class="d-flex align-items-center gap-2">
                <input type="file" name="csvFile" class="form-control bg-secondary text-light" style="max-width: 250px;" />
                <button type="submit" class="btn btn-custom-view btn-primary">Run Import</button>
            </form>
        </div>
    </div>

