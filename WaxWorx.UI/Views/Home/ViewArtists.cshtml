@model List<WaxWorx.UI.ViewModels.ArtistViewModel>

@{
    ViewData["Title"] = "Artists";
}

<div class="container">
    <h1>Artists</h1>
    <a class="btn btn-custom-add" asp-action="AddArtist">+ Add Artist</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Model)
            {
                <tr>
                    <td>@artist.Name</td>
                    <td>
                        <a class="btn btn-custom-edit btn-sm" asp-action="EditArtist" asp-route-id="@artist.Id">Edit</a>
                        <a class="btn btn-custom-delete btn-sm" asp-action="DeleteArtist" asp-route-id="@artist.Id" onclick="return confirm('Are you sure you want to delete this artist?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>