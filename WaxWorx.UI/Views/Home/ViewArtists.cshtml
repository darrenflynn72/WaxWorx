@model List<WaxWorx.UI.ViewModels.ArtistViewModel>

@{
    ViewData["Title"] = "Artists";
}

<div class="container-fluid bg-dark text-light py-4">
    <div class="d-flex align-items-center mb-4">
        <div class="summary-icon text-accent-blue me-3">
            <i class="bi bi-person-fill fs-1"></i>
        </div>
        <h2 class="text-info mb-0">Artists</h2>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <div>
            <a class="btn btn-custom-add mb-3" asp-action="AddArtist">+ Add Artist</a>
        </div>
        <div>
            <a class="btn btn-custom-view mb-3" href="javascript:history.back()">← Back</a>
        </div>
    </div>

    <table class="table table-dark table-hover table-bordered">
        <thead class="bg-dark text-light border-bottom border-secondary">
            <tr>
                <th>Name</th>
                <th style="width:1%; white-space:nowrap;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Model)
            {
                <tr>
                    <td>@artist.Name</td>
                    <td class="d-flex justify-content-end gap-2">
                        <a class="btn btn-custom-edit btn-sm me-1" asp-action="EditArtist" asp-route-id="@artist.Id">Edit</a>
                        <a class="btn btn-custom-delete btn-sm" asp-action="DeleteArtist" asp-route-id="@artist.Id" onclick="return confirm('Are you sure you want to delete this artist?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>