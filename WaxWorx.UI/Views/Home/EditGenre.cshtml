@model WaxWorx.UI.ViewModels.GenreViewModel

@{
    ViewData["Title"] = "Edit Genre";
}

<div class="container bg-dark text-light py-4">
    <div class="d-flex justify-content-between mb-3">
        <div>
            <div class="d-flex align-items-center mb-4">
                <div class="summary-icon text-accent-red me-3">
                    <i class="bi bi-music-note-list fs-1"></i>
                </div>
                <h2 class="text-info mb-0">Edit Genre</h2>
            </div>
        </div>
        <div>
            <a class="btn btn-custom-view mb-3" href="javascript:history.back()">← Back</a>
        </div>
    </div>

    <form asp-action="EditGenre" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <!-- Name -->
        <div class="row mb-3">
            <div class="col">
                <div class="form-group">
                    <label for="Name">Genre Name</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
                </div>
            </div>
        </div>

        <!-- Update Button -->
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-custom-edit">Update</button>
            </div>
        </div>
    </form>
</div>