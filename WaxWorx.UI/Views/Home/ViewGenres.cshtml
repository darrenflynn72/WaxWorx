@model List<WaxWorx.UI.ViewModels.GenreViewModel>

@{
    ViewData["Title"] = "Genres";
}

<div class="container-fluid bg-dark text-light py-4">
    <div class="d-flex align-items-center mb-4">
        <div class="summary-icon text-accent-red me-3">
            <i class="bi bi-music-note-list fs-1"></i>
        </div>
        <h2 class="text-info mb-0">Genres</h2>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <div>
            <a class="btn btn-custom-add mb-3" asp-action="AddGenre">+ Add Genre</a>
        </div>
        <div>
            <a class="btn btn-custom-view mb-3" asp-action="Index" asp-controller="Home">← Back</a>
        </div>
    </div>

    <table class="table table-dark table-hover table-bordered">
        <thead class="bg-dark text-light border-bottom border-secondary">
            <tr>
                <th>Name</th>
                <th style="width:1%; white-space:nowrap;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Name</td>
                    <td class="d-flex justify-content-end gap-2">
                        <a class="btn btn-custom-edit btn-sm me-1" asp-action="EditGenre" asp-route-id="@genre.Id">Edit</a>
                        <a class="btn btn-custom-delete btn-sm" asp-action="DeleteGenre" asp-route-id="@genre.Id" onclick="return confirm('Are you sure you want to delete this genre?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>