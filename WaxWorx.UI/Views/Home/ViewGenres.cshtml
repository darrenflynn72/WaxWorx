@model List<WaxWorx.UI.ViewModels.GenreViewModel>

@{
    ViewData["Title"] = "Genres";
}

<div class="container">
    <h1>Genres</h1>
    <a class="btn btn-custom-add" asp-action="AddGenre">+ Add Genre</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Name</td>
                        <td>
                        <a class="btn btn-custom-edit btn-sm" asp-action="EditGenre" asp-route-id="@genre.Id">Edit</a>
                        <a class="btn btn-custom-delete btn-sm" asp-action="DeleteGenre" asp-route-id="@genre.Id" onclick="return confirm('Are you sure you want to delete this genre?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>