@model WaxWorx.UI.ViewModels.ArtistViewModel

@{
    ViewData["Title"] = "Edit Artist";
}

<div class="container bg-dark text-light py-4">
    <div class="d-flex justify-content-between mb-3">
        <div>
            <div class="d-flex align-items-center mb-4">
                <div class="summary-icon text-accent-blue me-3">
                    <i class="bi bi-person-fill fs-1"></i>
                </div>
                <h2 class="text-info mb-0">Edit Artist</h2>
            </div>
        </div>
        <div>
            <a class="btn btn-custom-view mb-3" asp-action="Index" asp-controller="Home">← Back</a>
        </div>
    </div>

    <form asp-action="EditArtist" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label for="Name">Artist Name</label>
            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
        </div>

        <button type="submit" class="btn btn-custom-edit">Save Changes</button>
    </form>
</div>