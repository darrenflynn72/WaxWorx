@model List<WaxWorx.UI.ViewModels.AlbumViewModel>

@{
    ViewData["Title"] = "View Albums";
}

<div class="container-fluid bg-dark text-light py-4">
    <h2 class="mb-4 text-uppercase text-secondary">Albums</h2>
    
    <div class="d-flex justify-content-between mb-3">
        <div>
            <a class="btn btn-custom-add mb-3" asp-action="AddAlbum">+ Add New Album</a>
        </div>
        <div>
            <a class="btn btn-custom-view mb-3" asp-action="Index" asp-controller="Home">← Back</a>
        </div>
    </div>

    <table class="table table-dark table-hover table-bordered">
        <thead class="bg-dark text-light border-bottom border-secondary">
            <tr>
                <th>Artist</th>
                <th>Title</th>
                <th>Genre</th>
                <th>No. of Discs</th>
                <th>Color</th>
                <th>Picture Disc</th>
                <th>Limited Edition</th>
                <th>Boxset</th>
                @* <th>Notes</th> *@
                <th style="width:1%; white-space:nowrap;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var album in Model)
            {
                <tr>
                    <td>@album.Artist?.Name</td>
                    <td>@album.Title</td>
                    <td>@album.Genre?.Name</td>
                    <td>@album.NoOfDiscs</td>
                    <td>@album.Color</td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" disabled @(album.PictureDisc == true ? "checked" : "") />
                        </div>
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" disabled @(album.LimitedEdition == true ? "checked" : "") />
                        </div>
                    </td>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" disabled @(album.Boxset == true ? "checked" : "") />
                        </div>
                    </td>
                    @* <td>@album.Notes</td> *@
                    <td class="d-flex justify-content-end gap-2">
                        <a class="btn btn-custom-edit btn-sm me-1" asp-action="EditAlbum" asp-route-id="@album.Id">Edit</a>
                        <a class="btn btn-custom-delete btn-sm" asp-action="DeleteAlbum" asp-route-id="@album.Id" onclick="return confirm('Are you sure you want to delete this album?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>