@model WaxWorx.UI.ViewModels.VinylDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid bg-dark text-light py-4">
    <h2 class="mb-4 text-uppercase text-secondary">Vinyl Record Collection</h2>

    <!-- Summary Cards -->
    <!-- Summary Cards -->
    <div class="row mb-4 summary-cards">
        <div class="col-md-3">
            <div class="card summary-card bg-dark text-light">
                <div class="card-body d-flex align-items-center">
                    <div class="summary-icon text-accent-orange me-3">
                        <i class="bi bi-disc-fill fs-3"></i>
                    </div>
                    <div>
                        <h4 class="mb-0">@Model.TotalRecords</h4>
                        <small class="text-muted">Total Records</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card summary-card bg-dark text-light">
                <div class="card-body d-flex align-items-center">
                    <div class="summary-icon text-accent-blue me-3">
                        <i class="bi bi-person-fill fs-3"></i>
                    </div>
                    <div>
                        <h4 class="mb-0">@Model.TotalArtists</h4>
                        <small class="text-muted">Artists</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card summary-card bg-dark text-light">
                <div class="card-body d-flex align-items-center">
                    <div class="summary-icon text-accent-red me-3">
                        <i class="bi bi-music-note-list fs-3"></i>
                    </div>
                    <div>
                        <h4 class="mb-0">@Model.TotalGenres</h4>
                        <small class="text-muted">Genres</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card summary-card bg-dark text-light">
                <div class="card-body d-flex align-items-center">
                    <div class="summary-icon text-accent-green me-3">
                        <i class="bi bi-bar-chart-fill fs-3"></i>
                    </div>
                    <div>
                        <h4 class="mb-0">@Model.ConditionScore %</h4>
                        <small class="text-muted">Total Condition</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Collection Stats -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h4 class="text-info">Collection Stats</h4>
            <canvas id="genreChart" height="200"></canvas>
        </div>

        <!-- Recently Added -->
        <div class="col-md-4">
            <h4 class="text-info">Recently Added</h4>
            <ul class="list-group bg-dark">
                @foreach (var album in Model.RecentAlbums)
                {
                    <li class="list-group-item bg-dark text-light d-flex align-items-center">
                        <img src="@album.CoverUrl" alt="@album.Title" class="img-thumbnail me-3" style="width:60px; height:60px;" />
                        <div>
                            <strong>@album.Title</strong><br />
                            <small>@album.Artist (@album.Year)</small>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="container mt-4">
        <h4>API Test Actions</h4>
        <div class="d-flex gap-3">
            <form asp-controller="Home" asp-action="TestCoverArtApi" method="post">
                <button type="submit" class="btn btn-outline-secondary">Test CoverArt API</button>
            </form>

            <form asp-controller="Home" asp-action="TestMusicBrainzApi" method="post">
                <button type="submit" class="btn btn-outline-primary">Test MusicBrainz API</button>
            </form>
        </div>
    </div>


</div>

@section Scripts {
    <script>
        const ctx = document.getElementById('genreChart').getContext('2d');
        const genreChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.GenreLabels)),
                datasets: [{
                    label: 'Records by Genre',
                    data: @Html.Raw(Json.Serialize(Model.GenreCounts)),
                    backgroundColor: 'rgba(0, 255, 255, 0.6)',
                    borderColor: 'rgba(0, 255, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
}